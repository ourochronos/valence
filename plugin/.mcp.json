{
  "mcpServers": {
    "valence": {
      "command": "python",
      "args": ["-m", "valence.mcp_server"],
      "env": {
        "VALENCE_DB_HOST": "${VALENCE_DB_HOST:-localhost}",
        "VALENCE_DB_PORT": "${VALENCE_DB_PORT:-5433}",
        "VALENCE_DB_NAME": "${VALENCE_DB_NAME:-valence}",
        "VALENCE_DB_USER": "${VALENCE_DB_USER:-valence}",
        "VALENCE_DB_PASSWORD": "${VALENCE_DB_PASSWORD:-}"
      },
      "description": "Valence knowledge system - sources, articles, retrieval, provenance"
    }
  }
}
