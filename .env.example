# ============================================================================
# Valence v2.0.0 Configuration
# ============================================================================
# Copy to .env and customize. All settings have defaults.

# --- Database ---
VALENCE_DB_HOST=127.0.0.1
VALENCE_DB_PORT=5433
VALENCE_DB_NAME=valence
VALENCE_DB_USER=valence
VALENCE_DB_PASSWORD=valence

# --- Database Pool ---
# VALENCE_DB_POOL_MIN=2
# VALENCE_DB_POOL_MAX=10
# VALENCE_DB_POOL_TIMEOUT=30

# --- Server ---
# VALENCE_HOST=0.0.0.0
# VALENCE_PORT=8420
# VALENCE_EXTERNAL_URL=http://localhost:8420

# --- Embeddings ---
VALENCE_EMBEDDING_PROVIDER=openai
VALENCE_EMBEDDING_MODEL=text-embedding-3-small
# VALENCE_EMBEDDING_DIMS=1536
# VALENCE_EMBEDDING_DEVICE=cpu
# VALENCE_EMBEDDING_MODEL_PATH=
OPENAI_API_KEY=sk-...

# --- Alternative: Cerebras ---
# CEREBRAS_API_KEY=

# --- Curation ---
# VALENCE_MIN_CAPTURE_CONFIDENCE=0.5

# --- Logging ---
# VALENCE_LOG_LEVEL=INFO
# VALENCE_LOG_FORMAT=json
# VALENCE_LOG_FILE=

# --- Cache ---
# VALENCE_CACHE_MAX_SIZE=1000

# --- Async Embeddings ---
# VALENCE_ASYNC_EMBEDDINGS=true
# VALENCE_BACKFILL_INTERVAL=300
# VALENCE_USAGE_DECAY_RATE=0.01

# --- OAuth (production) ---
# VALENCE_OAUTH_ENABLED=true
# VALENCE_OAUTH_JWT_SECRET=  # min 32 chars, required in production
# VALENCE_OAUTH_USERNAME=admin
# VALENCE_OAUTH_PASSWORD=

# --- Federation (experimental) ---
# VALENCE_FEDERATION_ENABLED=false
# VALENCE_FEDERATION_NODE_NAME=
# VALENCE_SEED_HOST=
# VALENCE_SEED_PORT=
# VALENCE_SEED_ID=
# VALENCE_SEED_PEERS=
# VALENCE_FEDERATION_PRIVATE_KEY=
# VALENCE_FEDERATION_PUBLIC_KEY=
# VALENCE_FEDERATION_DID=
# VALENCE_TRUST_REGISTRY=
# VALENCE_REQUIRE_TLS=true
# VALENCE_FEDERATION_REQUIRE_AUTH=true

# --- CLI ---
# VALENCE_SERVER_URL=http://localhost:8420
# VALENCE_TOKEN=
# VALENCE_OUTPUT=json
