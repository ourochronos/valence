#!/usr/bin/env bash
# Wrapper for valence CLI with v2 database config
export VKB_DB_HOST="${VKB_DB_HOST:-127.0.0.1}"
export VKB_DB_PORT="${VKB_DB_PORT:-5433}"
export VKB_DB_NAME="${VKB_DB_NAME:-valence}"
export VKB_DB_USER="${VKB_DB_USER:-valence}"
export VKB_DB_PASSWORD="${VKB_DB_PASSWORD:-valence}"
export ORO_DB_HOST="$VKB_DB_HOST"
export ORO_DB_PORT="$VKB_DB_PORT"
export ORO_DB_NAME="$VKB_DB_NAME"
export ORO_DB_USER="$VKB_DB_USER"
export ORO_DB_PASSWORD="$VKB_DB_PASSWORD"

exec /Users/zonk1024/projects/valence/.venv/bin/valence "$@"
