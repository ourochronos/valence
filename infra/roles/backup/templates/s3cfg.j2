# s3cmd configuration for DigitalOcean Spaces
# Generated by Ansible - do not edit manually

[default]
access_key = {{ do_spaces_key }}
secret_key = {{ do_spaces_secret }}
host_base = {{ do_spaces_region }}.digitaloceanspaces.com
host_bucket = %(bucket)s.{{ do_spaces_region }}.digitaloceanspaces.com
bucket_location = {{ do_spaces_region }}

# Use HTTPS
use_https = True

# Signature version
signature_v2 = False

# Progress meter
progress_meter = False

# Encryption at rest (DO Spaces handles this server-side)
server_side_encryption = True
